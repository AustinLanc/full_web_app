<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : '' %></title>
    <link rel="stylesheet" href="/static/css/styles.css">
    <link href="/static/css/bootstrap.min.css" rel="stylesheet">
    <link href="/static/css/all.min.css" rel="stylesheet">
    <link href="/static/icon.ico" rel="icon">
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light bg-light border">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <img src="/static/logo.png" alt="Logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <% if (typeof user_id !== 'undefined' && user_id) { %>
                    <ul class="navbar-nav me-auto mt-2">
                      <% if (labUser) { %>
                        <li class="nav-item"><a class="nav-link" href="/update">Update</a></li>
                        <li class="nav-item"><a class="nav-link" href="/retains">Retains</a></li>
                        <li class="nav-item"><a class="nav-link" href="/qc">QC</a></li>
                        <li class="nav-item"><a class="nav-link" href="/testing">Testing</a></li>
                        <li class="nav-item"><a class="nav-link" href="/directory">Directory</a></li>
                      <% } %>
                      <li class="nav-item"><a class="nav-link" href="/chat">Chat</a></li>
                    </ul>
                    <ul class="navbar-nav ms-auto mt-2">
                        <% if (user_id == 1) { %>
                            <li class="nav-item"><a class="nav-link" href="/admin">Admin</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/account">Account</a></li>
                        <% } %>
                        <li class="nav-item"><a class="nav-link" href="/logout">Log Out</a></li>
                    </ul>
                <% } else { %>
                    <ul class="navbar-nav ms-auto mt-2">
                        <li class="nav-item"><a class="nav-link" href="/login">Log In</a></li>
                    </ul>
                <% } %>
            </div>
        </div>
    </nav>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="text-center mb-0">Retain Update</h3>
                    </div>
                    <div class="card-body">
                        <form action="/" method="post">
                            <div class="mb-4">
                                <label for="code_batch" class="form-label">Product Code and Batch Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-barcode"></i></span>
                                    <input type="text" class="form-control" id="code_batch" name="code_batch" autocomplete="off" placeholder="e.g 507450 NA5001" autofocus required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="box" class="form-label">Box Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-box"></i></span>
                                    <input type="text" class="form-control" id="box" name="box" autocomplete="off" placeholder="e.g 15" required>
                                </div>
                            </div>
                            <div class="mb-4">
                                <label for="date" class="form-label">Date</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                                    <input type="date" class="form-control" id="date" name="date" autocomplete="off">
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-success" type="submit" name="action" value="add">
                                    <i class="fas fa-plus-circle me-2"></i>Add Retain
                                </button>
                                <button class="btn btn-danger" type="submit" name="action" value="remove">
                                    <i class="fas fa-minus-circle me-2"></i>Remove Retain
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- typeof body !== 'undefined' ? body : '' %>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
</body>
</html>